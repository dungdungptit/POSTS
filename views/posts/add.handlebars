<div class="card card-body">
    <h3>Tạo bài viết mới</h3>
    <form action="/posts" method="post">
        <div class="form-group">
            <label for="title">Tiêu đề</label>
            <input type="text" class="form-control" name="title" id="title" required value="{{title}}">
        </div>
        <div class="form-group">
            <label for="text">Nội dung</label>
            <textarea type="text" class="form-control" name="text" id="text" required>{{text}}</textarea>
        </div>
        <button type="submit" class="btn btn-primary">Tạo Post mới</button>
    </form>
</div>