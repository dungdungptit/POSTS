{{#if posts}}
{{#each posts}}
<div class="card card-body mb-2">
    <h4>{{title}}</h4>
    <p>{{text}}</p>
    <a href="/posts/edit/{{_id}}" class="btn btn-secondary mb-2">Sửa</a>
    <form action="/posts/delete/{{_id}}?_method=DELETE" method="post">
        <input type="hidden" name="_method" value="DELETE">
        <button type="submit" class="btn btn-danger btn-block">Xóa</button>
    </form>
</div>
{{/each}}
{{else}}
<div class="card card-body mb-2">
    <h4>Không có bài viết nào</h4>
</div>
{{/if}}

